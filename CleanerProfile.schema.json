{
  "name": "CleanerProfile",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string"
    },
    "full_name": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "cpf": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "bio": {
      "type": "string"
    },
    "photo_url": {
      "type": "string"
    },
    "roupas_claras": {
      "type": "boolean",
      "default": true,
      "description": "PreferÃªncia por roupas claras"
    },
    "available": {
      "type": "boolean",
      "default": true
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "url": { "type": "string" },
          "uploaded_date": { "type": "string", "format": "date-time" },
          "label": { "type": "string" }
        }
      }
    },
    "verification_history": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "by": { "type": "string" },
          "date": { "type": "string", "format": "date-time" },
          "action": { "type": "string", "enum": ["approved","rejected","requested"] },
          "note": { "type": "string" }
        }
      }
    },
    "onboarding": {
      "type": "object",
      "properties": {
        "step": { "type": "number", "default": 0 },
        "completed": { "type": "boolean", "default": false },
        "accepted_terms": { "type": "boolean", "default": false }
      }
    },
    "training_steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "label": { "type": "string" },
          "done": { "type": "boolean", "default": false }
        }
      }
    },
    "total_cleanings": {
      "type": "number",
      "default": 0
    },
    "average_rating": {
      "type": "number",
      "default": 0
    },
    "consecutive_five_stars": {
      "type": "number",
      "default": 0
    },
    "rewards_earned": {
      "type": "number",
      "default": 0
    },
    "total_earnings": {
      "type": "number",
      "default": 0
    },
    "available_balance": {
      "type": "number",
      "default": 0,
      "description": "Saldo dispon\u00edvel para saque"
    },
    "pix_key": {
      "type": "string"
    },
    "bank_info": {
      "type": "object",
      "properties": {
        "bank_name": { "type": "string" },
        "agency": { "type": "string" },
        "account_number": { "type": "string" },
        "account_type": { "type": "string" },
        "pix_key": { "type": "string" }
      }
    }
  },
  "required": [
    "user_email",
    "full_name",
    "phone"
  ]
}